<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <context id="mysql" defaultModelType="flat" targetRuntime="MyBatis3Simple">
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/authorities?useUnicode=true"
                        userId="root"
                        password="123456" />
        <javaModelGenerator targetPackage="com.ct.mybatis.model" targetProject="src/main/java" />
        <sqlMapGenerator targetPackage="com.ct.mybatis.config" targetProject="src/main/java" />
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.ct.mybatis.dao" targetProject="src/main/java" />
        <table tableName="s_auth"/>
    </context>
</generatorConfiguration>